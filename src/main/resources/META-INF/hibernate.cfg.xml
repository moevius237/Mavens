<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.driver.class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernation</property>
        <property name="connection.username">root</property>
        <property name="connection.password">admin</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping class="org.example.entity.Capitulo"></mapping>
        <mapping class="org.example.entity.DetalleLibro"></mapping>
        <mapping class="org.example.entity.Libro"></mapping>
        <mapping class="org.example.entity.LibroAutor"></mapping>
        <mapping class="org.example.entity.Tema"></mapping>
        <mapping class="org.example.entity.Autor"></mapping>
        <mapping class="org.example.entity.Resenya"></mapping>

    </session-factory>
</hibernate-configuration>